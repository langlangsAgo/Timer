<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wonderelf.timer.view.MaskImageView
        android:id="@+id/maskImageView"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/photo_meat_beef"
        />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maskImageView"
        android:orientation="vertical"
        android:padding="@dimen/dp_12"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="牛肉"
            android:textColor="@color/color_404040"
            android:textSize="@dimen/size_28px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="01:12:55"
                android:textColor="@color/color_404040"
                android:textSize="@dimen/size_28px" />

            <ImageView
                android:id="@+id/iv_reset"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_reset" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>