<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dp_156"
        android:layout_height="@dimen/dp_156"
        android:background="@drawable/shape_meat"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_meat"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/icon_meat" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_meat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_12"
            android:text="肉类"
            android:textColor="@color/white"
            android:textSize="@dimen/size_32px" />
    </RelativeLayout>
</RelativeLayout>