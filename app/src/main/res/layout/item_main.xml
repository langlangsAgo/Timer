<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_300"
        android:background="@drawable/shape_bg_meat"
        android:gravity="center"
        android:orientation="vertical">

        <com.wonderelf.timer.view.TimerRunningView
            android:id="@+id/maskImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:siv_round_radius="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_meat"
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_72"
                android:scaleType="centerInside"
                android:src="@drawable/icon_meat" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:text="肉类"
                android:textColor="@color/white"
                android:textSize="@dimen/size_32px" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>